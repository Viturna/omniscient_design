<style>
  .logo-log {
    position: absolute;
    left: 35px;
    top: 35px;
  }

  .log {
    position: relative;
    background-image: url('/assets/bg-presentation.png');
    background-repeat: no-repeat;
    height: 100vh;
  }

  .box-log {
    position: absolute;
    bottom: 35px;
    padding: 0px 8vw
  }

  .form {
    margin-top: 32px;
    width: 60vw;
    display: flex;
    gap: 16px;
    justify-content: center;
    align-items: center;
    height: 100%;
    padding: 30px 0;
    border-radius: 5px;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 999;
  }

  form {
    display: flex;
    gap: 16px;
    flex-direction: column;
  }


   .sign-up-in{
    text-align: center;
   }
  .btn-login {
    margin-top: 16px;
    width: 22vw;
    height: 65px;
  }

  .actions {
    margin-left: auto; /* Pour aligner à droite */
  }
</style>
<div class="main-div log" style="background-color:#202020; color:#FFF; min-height:100vh;">
  <section class="box-log">
    <h1>Mot de passe oublié ?</h1>
    <div class="form">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
        </div>
        <div class="actions">
          <%= f.submit "Recevoir les instructions", class:"button dark btn-login" %>
        </div>
      <% end %>
    </div>
  </section>
</div>
