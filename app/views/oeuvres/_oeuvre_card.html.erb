<%= link_to oeuvre do %>
  <% if oeuvre.oeuvre_images.first&.file&.attached? %>
    <div class="card-oeuvre" style="background: url('<%= url_for(oeuvre.oeuvre_images.first.file.variant(:thumb)) %>'); background-size: cover; background-position: center center;">
    <% else %>
      <div class="card-oeuvre" style="background: #F3F3F3;">
      <% end %>
      <div class="inner-card-oeuvre">
        <p class="domaine-card-oeuvre"><%= oeuvre.domaines.map(&:domaine).join(', ') %></p>
        <p class="title-card-oeuvre"><%= oeuvre.nom_oeuvre %></p>
      </div>
    </div>
  <% end %>