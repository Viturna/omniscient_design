<% content_for :title, "Soutenir le projet - Omniscient Design" %> <% content_for :description, "Comprendre pourquoi nous avons besoin de votre soutien et comment sont utilisés les dons." %>

<style>
.donators-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 24px; margin-bottom: 60px; }

.donator-card { background-color: #fff; border: 1px solid #E5E5E5; border-radius: 12px; padding: 24px; display: flex; align-items: center; gap: 16px; transition: transform 0.2s ease; }

.donator-card:hover { transform: translateY(-2px); border-color: #D54758; }

.donator-avatar { width: 50px; height: 50px; border-radius: 50%; background-color: #F7F7F7; display: flex; align-items: center; justify-content: center; }

 .donator-avatar svg { width: 24px; height: 24px; fill: #D54758; }

.donator-info h3 { font-size: 1.1rem; font-weight: 600; color: #202020; margin: 0 0 4px 0; }

.donator-meta { font-size: 0.9rem; color: #52525D; }

.costs-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 20px; margin: 40px 0; }

.cost-card { background-color: #FFF; border: 1px solid #E5E5E5; border-radius: 8px; padding: 24px; text-align: center; display: flex; flex-direction: column; align-items: center; justify-content: center; }
.cost-card:hover { transform: translateY(-2px); border-color: #D54758; }
.cost-icon { margin-bottom: 16px; }


.cost-price { font-size: 1.5rem; font-weight: 700; color: #202020; margin-bottom: 4px; }

.cost-label { font-size: 0.9rem; color: #52525D; }

.funding-list { list-style: none; padding: 0; margin: 32px 0; }

.funding-item { display: flex; align-items: flex-start; gap: 16px; margin-bottom: 20px; padding: 16px; background-color: #FFF; border-radius: 8px; }

.funding-item strong { color: #202020; font-weight: 600; }

.commitments-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 32px; margin-top: 40px; margin-bottom: 60px; }

.commitment-item h3 { margin: 16px 0 8px 0; color: #202020; }

.commitment-icon path { fill: #D54758; }

.button.dark.button-kit { background-color: #D54758; border-color: #D54758; color: #FFF; } .button.dark.button-kit:hover { background-color: #c03d4d; border-color: #c03d4d; }
</style>

