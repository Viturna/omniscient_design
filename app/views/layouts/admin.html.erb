        </nav>

        <div class="flex-btn-login">
          <% if user_signed_in? %>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "button button-login dark" %>
          <% end %>
        </div>
      </div>
       <div class="link-header">
          <p>©<%= Time.now.year %> - Omniscient Design</p>
        </div>
      </div>
