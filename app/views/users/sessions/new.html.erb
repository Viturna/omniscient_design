<style>
  .logo-log {
    position: absolute;
    left: 35px;
    top: 35px;
  }

  .log {
    position: relative;
    background-image: url('/assets/bg-presentation.png');
    background-repeat: no-repeat;
    height: 100vh;
  }

  .box-log {
    position: absolute;
    bottom: 35px;
    padding: 0px 8vw
  }

  .form {
    margin-top: 32px;
    width: 60vw;
    display: flex;
    gap: 16px;
    justify-content: center;
    align-items: center;
    height: 100%;
    padding: 30px 0;
    border-radius: 5px;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 999;
  }

  form {
    display: flex;
    gap: 16px;
    flex-direction: column;
  }

  .sign-up-in,
  .forgot-password {
    color: #fff;
  }
  .sign-up-in:hover,
  .forgot-password:hover{
    text-decoration: underline;
  }
   .forgot-password{
    text-align: right;
   }
   .sign-up-in{
    text-align: center;
   }
  .btn-login {
    margin-top: 16px;
    width: 22vw;
    height: 65px;
  }

  .actions {
    margin-left: auto; /* Pour aligner à droite */
  }
  .remember-me{
    margin-top:-32px;
    width: fit-content;
  }

  .password-container {
    position: relative;
  }

  .password-container .toggle-password {
    position: absolute;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    fill:#202020;
  }

  @media screen and (min-width:0px) and (max-width:349px) {
      .logo-log {
      width: 120px;
      left: 15px;
      top: 15px;
    }

    .box-log {
      padding: 100px 5vw
    }
    form{
      width: 80vw;
    }
    .form {
      margin-top: 32px;
      width: 90vw;
      padding: 20px 0;
    }

    .btn-login {
      width: 80vw;
      height: 65px;
    }
    input[type=text],
    input[type=date],
    input[type=email],
    input[type=password],
    select {
      width: 65vw;
      height: 50px;
    }
    .remember-me{
      margin-top:0px
    }
    .sign-up-in, .forgot-password{
      font-size: 14px;
    }
  }
  @media screen and (min-width:350px) and (max-width:800px) {
    .logo-log {
    width: 145px;
   }

    .box-log {
      padding: 200px 6vw
    }

    .form {
      margin-top: 32px;
      width: 84vw;
      display: flex;
      gap: 16px;
      justify-content: center;
      align-items: center;
      height: 100%;
      padding: 30px 0;
      border-radius: 5px;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 999;
    }

    .btn-login {
      width: 72vw;
      height: 65px;
    }
    input[type=text],
    input[type=date],
    input[type=email],
    input[type=password],
    select {
      width: 65vw;
      height: 60px;
    }
    .remember-me{
      margin-top:0px
    }
    .sign-up-in, .forgot-password{
      font-size: 14px;
    }
  }
</style>
<div class="main-div log" style="background-color:#202020; color:#FFF; min-height:100vh;">
  <%= image_tag "logo-white.svg", alt: "", class: "logo-log" %>
  <section class="box-log">
    <h1>Connexion</h1>
    <div class="form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.email_field :email, autocomplete: "email", placeholder: "Email" %>
        </div>
        <div class="field password-container">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Mot de passe", id: "password-field" %>
          <button type="button" class="toggle-password">
            <svg id="show-password-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-eye">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
              <circle cx="12" cy="12" r="3"></circle>
            </svg>
            <svg id="hide-password-icon" style="display:none;" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-eye-off">
              <path d="M17.94 17.94a10.97 10.97 0 0 1-5.94 1.94C6 20 2 12 2 12s1.5-3.34 4.94-5.94M1 1l22 22"></path>
              <path d="M12 5a7 7 0 0 1 7 7"></path>
            </svg>
          </button>
        </div>
        <%= link_to "Mot de passe oublié ?", new_user_password_path, class: "forgot-password" %>
        <% if devise_mapping.rememberable? %>
          <div class="field remember-me">
            <%= f.check_box :remember_me %>
            <%= f.label "Se souvenir de moi" %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Se connecter ⏩️", class:"button dark btn-login" %>
        </div>
        <%= link_to "Vous n'avez pas de compte ? S'inscrire", new_user_registration_path, class: "sign-up-in" %>
        <%= link_to 'Renvoyer l\'email de confirmation', new_user_confirmation_path,  class: "sign-up-in" %>
      <% end %>
    </div>
  </section>
</div>
<script>
  $(document).ready(function() {
    const $passwordField = $('#password-field');
    const $togglePasswordButton = $('.toggle-password');
    const $showPasswordIcon = $('#show-password-icon');
    const $hidePasswordIcon = $('#hide-password-icon');

    $togglePasswordButton.on('click', function() {
      if ($passwordField.attr('type') === 'password') {
        $passwordField.attr('type', 'text');
        $showPasswordIcon.hide();
        $hidePasswordIcon.show();
      } else {
        $passwordField.attr('type', 'password');
        $showPasswordIcon.show();
        $hidePasswordIcon.hide();
      }
    });
  });
</script>
