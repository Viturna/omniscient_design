<script>
  document.addEventListener("turbo:load", () => {
    // Inputs pour les dates (adaptation des IDs pour Studio)
    var creationYearInput = document.getElementById("creation-year-input");
    var endYearInput = document.getElementById("end-year-input");
    var creationYearError = document.getElementById("creation-year-error");
    var endYearError = document.getElementById("end-year-error");

    var currentYear = new Date().getFullYear();
    // Sélecteur de formulaire plus précis pour éviter les conflits si plusieurs formulaires
    var form = document.querySelector("form[data-recaptcha-target='form']");

    if (!creationYearInput || !form) return;

    function validateYear(year, minYear, maxYear) {
      return !isNaN(year) && year >= minYear && year <= maxYear;
    }

    creationYearInput.addEventListener("input", function() {
      var year = creationYearInput.value;
      if (!validateYear(year, 0, currentYear)) {
        creationYearError.textContent = "Veuillez entrer une année de création valide.";
      } else {
        creationYearError.textContent = "";
      }
    });

    if (endYearInput) {
      endYearInput.addEventListener("input", function() {
        var year = endYearInput.value;
        if (year && !validateYear(year, 0, currentYear)) {
          endYearError.textContent = "Veuillez entrer une année de fermeture valide.";
        } else {
          if (endYearError) endYearError.textContent = "";
        }
      });
    }

    form.addEventListener("submit", function(event) {
      var creationYear = creationYearInput.value;
      var endYear = endYearInput ? endYearInput.value : null;
      var hasError = false;

      if (!validateYear(creationYear, 0, currentYear)) {
        creationYearError.textContent = "Année de création invalide.";
        hasError = true;
      }
      if (endYear && !validateYear(endYear, 0, currentYear)) {
        if (endYearError) endYearError.textContent = "Année de fermeture invalide.";
        hasError = true;
      }

      if (hasError) {
        event.preventDefault();
      }
    });
  });
</script>
