<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns@3.0.0/dist/chartjs-adapter-date-fns.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartkick@5.0.1/dist/chartkick.js"></script>
<style>
  /* --- GLOBAL DASHBOARD STYLES --- */
  .users-dash-wrapper {
    padding: 40px 4vw 80px 4vw;
    max-width: 1600px;
    margin: 0 auto;
    background-color: #f8f9fa;
    min-height: 100vh;
    font-family: 'IBM Plex Sans', sans-serif;
    color: #202020;
    box-sizing: border-box;
  }

  /* Header */
  .users-dash-header {
    display: flex; justify-content: space-between; align-items: center; margin-bottom: 40px;
    flex-wrap: wrap; gap: 16px;
  }
  .users-dash-title {
    font-size: 32px; font-weight: 500; color: #202020;
    display: flex; align-items: center; gap: 16px; margin: 0;
  }
  .users-dash-back-link {
    display: flex; align-items: center; justify-content: center; width: 48px; height: 48px; border-radius: 50%;
    background-color: #fff; border: 1px solid #eee; transition: all 0.2s ease; flex-shrink: 0;
  }
  .users-dash-back-link:hover { background-color: #f0f0f0; transform: translateX(-2px); }

  /* KPIs */
  .users-dash-kpi-grid {
    display: grid; grid-template-columns: repeat(4, 1fr); gap: 24px; margin-bottom: 32px;
  }
  .users-dash-kpi-card {
    background: #fff; padding: 24px; border-radius: 16px; border: 1px solid #f0f0f0;
    box-shadow: 0 2px 8px rgba(0,0,0,0.02); display: flex; flex-direction: column; justify-content: space-between; height: 160px;
    min-width: 0;
  }
  .kpi-top { display: flex; justify-content: space-between; align-items: flex-start; }
  .kpi-label { font-size: 14px; font-weight: 500; color: #888; text-transform: uppercase; }
  .kpi-icon { width: 40px; height: 40px; border-radius: 10px; display: flex; align-items: center; justify-content: center; flex-shrink: 0; }
  .kpi-icon svg { width: 20px; height: 20px; fill: #202020; }
  .kpi-value { font-size: 32px; font-weight: 600; color: #202020; margin-top: 10px; line-height: 1; }

  .bg-blue-light { background-color: #E3F2FD; color: #1565C0; }
  .bg-green-light { background-color: #E8F5E9; color: #2E7D32; }
  .bg-purple-light { background-color: #F3E5F5; color: #7B1FA2; }
  .bg-orange-light { background-color: #FFF3E0; color: #E65100; }

  /* Charts Area */
  .charts-grid { display: grid; grid-template-columns: 2fr 1fr; gap: 24px; margin-bottom: 40px; }
  .chart-card { background: #fff; border-radius: 16px; padding: 24px; border: 1px solid #f0f0f0; box-shadow: 0 2px 8px rgba(0,0,0,0.02); }
  .chart-title { font-size: 16px; font-weight: 600; color: #202020; margin-bottom: 20px; display: block; }

  /* Toolbar */
  .users-dash-toolbar {
    display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; flex-wrap: wrap; gap: 16px;
  }
  .btn-add {
    background-color: #202020; color: #fff; padding: 12px 24px; border-radius: 30px;
    text-decoration: none; font-weight: 500; font-size: 14px; display: inline-flex; align-items: center; gap: 8px;
    transition: background 0.2s;
  }
  .btn-add:hover { background-color: #333; }

  /* Table */
  .users-dash-table-container {
    background: #fff; border-radius: 16px; box-shadow: 0 2px 8px rgba(0,0,0,0.02); border: 1px solid #f0f0f0;
    overflow-x: auto; margin-bottom: 48px; position: relative; z-index: 1;
  }
  .users-dash-table { width: 100%; border-collapse: separate; border-spacing: 0; min-width: 800px; }
  .users-dash-table th {
    background-color: #fafafa; padding: 18px 24px; text-align: left;
    font-size: 12px; font-weight: 600; color: #666; text-transform: uppercase; border-bottom: 1px solid #eee; white-space: nowrap;
  }
  .users-dash-table td {
    padding: 18px 24px; border-bottom: 1px solid #f5f5f5;
    font-size: 14px; font-weight: 500; color: #202020; vertical-align: middle; white-space: nowrap;
  }
  .users-dash-table tr:hover { background-color: #fcfcfc; }

  /* Table Specifics */
  .ad-preview-img { width: 60px; height: 60px; border-radius: 8px; object-fit: cover; background: #eee; border: 1px solid #eee; }
  .ad-info { display: flex; flex-direction: column; }
  .ad-title { font-weight: 600; color: #202020; }
  .ad-link { font-size: 12px; color: #888; max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }

  .badge { padding: 4px 10px; border-radius: 20px; font-size: 11px; font-weight: 600; text-transform: uppercase; }
  .badge-active { background: #E8F5E9; color: #2E7D32; }
  .badge-inactive { background: #f5f5f5; color: #999; }

  .actions-cell { display: flex; gap: 8px; justify-content: flex-end; }
  .action-btn {
    width: 32px; height: 32px; border-radius: 8px; border: 1px solid #eee; background: #fff;
    display: flex; align-items: center; justify-content: center; color: #666; transition: all 0.2s;
  }
  .action-btn:hover { background: #f5f5f5; color: #202020; }
  .action-btn.delete:hover { background: #FFEBEE; color: #C62828; border-color: #FFCDD2; }

  /* Responsive */
  @media (max-width: 1024px) {
    .users-dash-kpi-grid { grid-template-columns: repeat(2, 1fr); }
    .charts-grid { grid-template-columns: 1fr; }
  }
  @media (max-width: 768px) {
    .users-dash-wrapper { padding: 20px 16px 60px 16px; }
    .users-dash-header { flex-direction: column; align-items: flex-start; }
    .users-dash-title { font-size: 24px; }
    .users-dash-kpi-grid { grid-template-columns: 1fr; }
  }
</style>
<% 
  total_impressions = @ads.sum(:impressions_count)
  total_clicks = @ads.sum(:clicks_count)
  global_ctr = total_impressions > 0 ? ((total_clicks.to_f / total_impressions) * 100).round(2) : 0
  active_ads_count = @ads.count { |ad| ad.currently_running? }
%>
<div class="users-dash-wrapper">
  <div class="users-dash-header">
    <div style="display: flex; align-items: center; gap: 20px;">
      <%= link_to admin_root_path, class: "users-dash-back-link" do %>
        <svg style="width: 24px; height: 24px; fill: #202020;" viewBox="0 0 24 24"><path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/></svg>
      <% end %>
      <h1 class="users-dash-title">Gestion des Publicités</h1>
    </div>
  </div>
  <div class="users-dash-kpi-grid">
    <div class="users-dash-kpi-card">
      <div class="kpi-top">
        <span class="kpi-label">Publicités Actives</span>
        <div class="kpi-icon bg-green-light">
          <svg viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 14.5v-9l6 4.5-6 4.5z"/></svg>
        </div>
      </div>
      <span class="kpi-value"><%= active_ads_count %> <span style="font-size: 16px; color: #999; font-weight: 400;">/ <%= @ads.count %></span></span>
    </div>
    <div class="users-dash-kpi-card">
      <div class="kpi-top">
        <span class="kpi-label">Vues Totales</span>
        <div class="kpi-icon bg-blue-light">
          <svg viewBox="0 0 24 24"><path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/></svg>
        </div>
      </div>
      <span class="kpi-value"><%= number_with_delimiter(total_impressions, delimiter: " ") %></span>
    </div>
    <div class="users-dash-kpi-card">
      <div class="kpi-top">
        <span class="kpi-label">Clics Totaux</span>
        <div class="kpi-icon bg-purple-light">
          <svg viewBox="0 0 24 24"><path d="M3.5 18.49l6-6.01 4 4L22 6.92l-1.41-1.41-7.09 7.97-4-4L2 16.99z"/></svg>
        </div>
      </div>
      <span class="kpi-value"><%= number_with_delimiter(total_clicks, delimiter: " ") %></span>
    </div>
    <div class="users-dash-kpi-card">
      <div class="kpi-top">
        <span class="kpi-label">CTR Moyen</span>
        <div class="kpi-icon bg-orange-light">
          <svg viewBox="0 0 24 24"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 9h-2V7h2v5zm0 4h-2v-2h2v2z"/></svg>
        </div>
      </div>
      <span class="kpi-value"><%= global_ctr %>%</span>
    </div>
  </div>
  <div class="charts-grid">
    <div class="chart-card">
      <span class="chart-title">Top 5 Performances (Clics)</span>
      <% top_ads = @ads.sort_by(&:clicks_count).reverse.first(5).map { |ad| [ad.title.truncate(15), ad.clicks_count] } %>
      <%= bar_chart top_ads, height: "200px", colors: ["#202020"] %>
    </div>
    <div class="chart-card">
      <span class="chart-title">Répartition Statut</span>
      <% status_data = { "Actives" => active_ads_count, "Inactives" => (@ads.count - active_ads_count) } %>
      <%= pie_chart status_data, donut: true, height: "200px", colors: ["#2E7D32", "#eeeeee"], legend: "right" %>
    </div>
  </div>
  <div class="users-dash-toolbar">
    <div class="section-title" style="margin:0;">Liste des campagnes</div>
    <%= link_to new_admin_ad_path, class: "btn-add" do %>
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/></svg>
      Créer une publicité
    <% end %>
  </div>
  <div class="users-dash-table-container">
    <table class="users-dash-table">
      <thead>
        <tr>
          <th>Visuel</th>
          <th>Campagne</th>
          <th>Statut</th>
          <th style="text-align: center;">Vues</th>
          <th style="text-align: center;">Clics</th>
          <th style="text-align: center;">CTR</th>
          <th>Période</th>
          <th style="text-align: right;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @ads.each do |ad| %>
          <tr>
            <td style="width: 80px;">
              <% if ad.image.attached? %>
                <%= image_tag ad.image.variant(resize_to_limit: [100, 100]), class: "ad-preview-img" %>
              <% else %>
                <div class="ad-preview-img" style="display:flex;align-items:center;justify-content:center;color:#ccc;">No img</div>
              <% end %>
            </td>
            <td>
              <div class="ad-info">
                <span class="ad-title"><%= ad.title %></span>
                <%= link_to ad.link, ad.link, target: "_blank", class: "ad-link" %>
              </div>
            </td>
            <td>
              <% if ad.currently_running? %>
                <span class="badge badge-active">Actif</span>
              <% else %>
                <span class="badge badge-inactive">Inactif</span>
              <% end %>
            </td>
            <td style="text-align: center;"><%= number_with_delimiter(ad.impressions_count, delimiter: " ") %></td>
            <td style="text-align: center;"><strong><%= number_with_delimiter(ad.clicks_count, delimiter: " ") %></strong></td>
            <td style="text-align: center;">
              <% ctr = ad.impressions_count > 0 ? ((ad.clicks_count.to_f / ad.impressions_count) * 100).round(2) : 0 %>
              <%= ctr %>%
            </td>
            <td>
              <div style="font-size: 13px; color: #666;">
                <% if ad.start_date.present? %>
                  Du <%= ad.start_date.strftime('%d/%m/%y') %><br>
                  <% if ad.end_date.present? %>
                    Au <%= ad.end_date.strftime('%d/%m/%y') %>
                  <% else %>
                    (Permanent)
                  <% end %>
                <% else %>
                  Non planifié
                <% end %>
              </div>
            </td>
            <td>
              <div class="actions-cell">
                <%= link_to edit_admin_ad_path(ad), class: "action-btn", title: "Modifier" do %>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/></svg>
                <% end %>
                <%= link_to admin_ad_path(ad), 
                      data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette publicité ?" },
                      class: "action-btn delete", title: "Supprimer" do %>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/></svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>