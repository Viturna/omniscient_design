<section class="grid-1 searchpage"  data-controller="tabs-search">

  <h1>Rechercher</h1>
  <div class="tabs">
    <button class="tab <%= 'active' if params[:tab].blank? || params[:tab] == 'designers' %>" 
            data-tab="designers" 
            data-tabs-search-target="tab" 
            data-action="click->tabs-search#switch">
      Designers (<%= Designer.where(validation: true).count %>)
    </button>
    <button class="tab <%= 'active' if params[:tab] == 'references' %>" 
            data-tab="references" 
            data-tabs-search-target="tab" 
            data-action="click->tabs-search#switch">
      Références (<%= Oeuvre.where(validation: true).count %>)
    </button>
    <button class="tab <%= 'active' if params[:tab] == 'frise' %>" 
            data-tab="frise" 
            data-tabs-search-target="tab" 
            data-action="click->tabs-search#switch">
      Frise Chronologique
    </button>
  </div>

