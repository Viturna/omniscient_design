<style>
  .popup .popup-content form {
    padding: 0px;
  }
  .modal {
    display: none;
    position: fixed;
    z-index: 999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0,0,0,0.4);
  }

  .form-group {
    margin-bottom: 15px;
  }

  .user-list {
    margin: 16px 0;
    list-style-type: none;
    padding: 0;
  }

  .user-list li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 16px;
    border-bottom: 1px solid #ddd;
  }
   .user-list li:hover{
    background-color: #fefefe;
   }
   .user-list li:hover select{
    background-color: #fefefe;
   }
  .user-list li:last-child {
    border-bottom: none;
  }
  .user-list li select{
    border: none;
    font-size: 16px;
    background-color: #F9F9F9;
  }
  .user-list li select:hover{
    background-color: #f9f9f9;
  }
  .flex-share {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .input-action {
    display: flex;
    gap: 8px;
    align-items: center;
    justify-content: center;
  }
    .input-action .button{
      margin-top: 0;
    }
  @media screen and (max-width:768px){
    .input-action {
      flex-direction: column;
    }
  }
</style>
