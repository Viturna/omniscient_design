        <label for="notionsFilter"><%= t('search.notions') %></label>
        <%= form.select :notions, Notion.all.map { |n| [n.name, n.id] }, { include_blank: t('search.choose_notions'), selected: params[:notions] }, { multiple: true, class: "select2", name: "notions[]" } %>
