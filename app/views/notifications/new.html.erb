<section class="grid-1" data-controller="admin-notification">
  <div class="container">
    <%# Utilisation de notifications_path car c'est une action d'admin %>
    <%= form_with url: notifications_path, local: true, data: { action: "submit->admin-notification#submit" } do |form| %>
      <div class="form-group">
        <%= form.label :user_id, "Destinataire(s)" %>
        <%# Checkbox pour "Tous les utilisateurs" %>
        <div class="form-check" style="margin-bottom: 10px;">
          <input type="checkbox" 
                 id="select-all-users" 
                 name="select_all" 
                 value="all" 
                 class="form-check-input"
                 data-admin-notification-target="checkbox"
                 data-action="change->admin-notification#toggleSelection">
          <label class="form-check-label" for="select-all-users">
            Sélectionner Tous les Utilisateurs
          </label>
        </div>
        <%= select_tag 'user_ids[]', 
            options_from_collection_for_select(@users, :id, ->(u) { "#{u.email} (ID: #{u.id})" }), 
            { 
              class: "form-control user-multiselect", 
              multiple: true, 
              id: "user-select-field",
              data: { 
                admin_notification_target: "select"
              } 
            } %>
      </div>
      <%# --- AJOUT DU CHAMP TITRE --- %>
      <div class="form-group">
        <%= form.label :title, "Titre de la notification" %>
        <%= form.text_field :title, class: "form-control", required: true, placeholder: "Ex: Nouveauté, Rappel..." %>
      </div>
      <div class="form-group">
        <%= form.label :message, "Message de la notification" %>
        <%= form.text_area :message, rows: 5, class: "form-control", required: true %>
      </div>
      <div class="actions">
        <%= form.submit "Envoyer la notification", 
            class: "button dark", 
            data: { confirm: "Êtes-vous sûr de vouloir envoyer cette notification ?" } %>
      </div>
    <% end %>
  </div>
</section>