<div class="check-box-wrapper <%= 'selected' if defined?(@selected_designer_ids) && @selected_designer_ids.include?(designer.id) %>"
     data-id="<%= designer.id %>">
  <%= check_box_tag "designer_ids[]", designer.id,
      (defined?(@selected_designer_ids) && @selected_designer_ids.include?(designer.id)),
      class: 'hidden-check', id: "designer_#{designer.id}", disabled: true %>
  <label for="designer_#{designer.id}">
    <% if designer.designer_images.first&.file&.attached? %>
      <div class="card-list-add" style="background-image: url('<%= url_for(designer.designer_images.first.file.variant(:thumb)) %>');  background-size: cover; background-position: center;">
      <% else %>
        <div class="card-list-add" style="background: #F3F3F3;">
        <% end %>
        <div class="default-overlay"></div>
        <p class="card-title-add"><%= truncate(designer.nom_designer, length: 25, omission: '...') %></p>
      </div>
    </label>
  </div>