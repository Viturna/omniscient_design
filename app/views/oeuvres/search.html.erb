<section class="grid-1 searchpage">
  <h1>Rechercher</h1>
  <div class="tabs">
    <button class="tab <%= 'active' if params[:tab].blank? || params[:tab] == 'designers' %>" data-tab="designers">Designers</button>
    <button class="tab <%= 'active' if params[:tab] == 'references' %>" data-tab="references">Références</button>
    <button class="tab <%= 'active' if params[:tab] == 'frise' %>" data-tab="frise">Frise Chronologique</button>
  </div>

  <%= form_with url: search_oeuvres_path, method: :get, local: true, id: "filterForm" do |form| %>
    <%= form.hidden_field :tab, id: "activeTab", value: params[:tab] || "designers" %>
         <h2>Filtres</h2>
      <div class="filters">
       
        <div class="filter">
          <label for="domainFilter">Domaine</label>
          <%= form.select :domaine, Domaine.all.map { |d| [d.domaine, d.id] }, 
            { include_blank: "Choisir un domaine", selected: params[:domaine] }, 
            { multiple: true, class: "select2" } %>
        </div>
        <div class="filter" id="countryFilterContainer">
          <label for="paysFilter">Pays</label>
          <%= form.select :country, Country.all.map { |p| [p.country, p.id] }, 
            { include_blank: "Choisir un pays", selected: params[:country] }, 
            { multiple: true, class: "select2" } %>
        </div>
       <div class="filter" id="notionsFilterContainer">
          <label for="notionsFilter">Notions</label>
          <%= form.select :notions, Notion.all.map { |n| [n.name, n.id] }, 
            { include_blank: "Choisir une notion", selected: params[:notions] }, 
            { multiple: true, class: "select2" } %>
        </div>
          <div class="filter">
            <label for="dateFilter">Dates</label>
            <div class="dropdown">
              <button type="button" class="dropdown-toggle">Sélectionner une période</button>
              <div class="dropdown-menu">
                <label for="startDate">Début</label>
                <%= form.number_field :start_year, value: params[:start_year], class: "date-filter", placeholder: "Année de début" %>

                <label for="endDate">Fin</label>
                <%= form.number_field :end_year, value: params[:end_year], class: "date-filter", placeholder: "Année de fin" %>
              </div>
            </div>
          </div>
    </div>



    <button type="submit" id="filterSubmit">Filtrer</button>
  <% end %>

  <turbo-frame id="search-results">
   <div id="designers" class="content-tab" style="<%= 'display: block;' if params[:tab].blank? || params[:tab] == 'designers' %><%= 'display: none;' if params[:tab].present? && params[:tab] != 'designers' %>">
      <div class="flex-container" id="designers-container">
        <% @designers.each do |designer| %>
          <%= render 'designers/designer_card', designer: designer %>
        <% end %>
      </div>
    </div>

    <div id="references" class="content-tab" style="<%= 'display: block;' if params[:tab] == 'references' %><%= 'display: none;' unless params[:tab] == 'references' %>">
      <div class="flex-container" id="oeuvres-container">
        <% @oeuvres.each do |oeuvre| %>
          <%= render 'oeuvres/oeuvre_card', oeuvre: oeuvre %>
        <% end %>
      </div>
    </div>

    <div id="frise" class="content-tab" style="<%= 'display: block;' if params[:tab] == 'frise' %><%= 'display: none;' unless params[:tab] == 'frise' %>">
      <h2>Frise Chronologique</h2>
      <div class="timeline">
        <% @frises.each do |frise| %>
          <div class="timeline-item">
            <div class="year"><%= frise.annee %></div>
          </div>
        <% end %>
      </div>
    </div>
  </turbo-frame>

</section>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const tabs = document.querySelectorAll(".tabs button");
  const contentTabs = document.querySelectorAll(".content-tab");
  const tabInput = document.getElementById("activeTab");

  function showTab(tabName) {
    contentTabs.forEach(tab => tab.style.display = "none");
    document.getElementById(tabName).style.display = "block";

    tabs.forEach(tab => tab.classList.remove("active"));
    document.querySelector(`.tabs button[data-tab="${tabName}"]`).classList.add("active");
  }
  

 tabs.forEach(tab => {
  tab.addEventListener("click", function () {
    const tabName = this.getAttribute("data-tab");
    tabInput.value = tabName;

    // Réinitialisation des filtres
    const filterForm = document.getElementById("filterForm");
    if (filterForm) {
      filterForm.reset(); // Réinitialise le formulaire
      $('.select2').val(null).trigger('change'); // Réinitialise les select2
    }

    const url = new URL(window.location);
    url.searchParams.set("tab", tabName);
    window.history.pushState({}, "", url);

    showTab(tabName);
  });
});
});
document.addEventListener("DOMContentLoaded", function () {
  const tabs = document.querySelectorAll(".tabs button");
  const notionsFilter = document.getElementById("notionsFilterContainer");
  const countryFilter = document.getElementById("countryFilterContainer");

  function toggleNotionsFilter(tabName) {
    if (tabName === "designers") {
      notionsFilter.style.display = "none";
    } else {
      notionsFilter.style.display = "block";
    }
  }


  function toggleCountryFilter(tabName) {
    if (tabName === "references") {
      countryFilter.style.display = "none";
    } else {
      countryFilter.style.display = "block";
    }
  }

  tabs.forEach(tab => {
    tab.addEventListener("click", function () {
      const tabName = this.getAttribute("data-tab");
      toggleNotionsFilter(tabName);
      toggleCountryFilter(tabName);
    });
  });

  // Vérifie l'onglet actif au chargement de la page
  const activeTab = new URLSearchParams(window.location.search).get("tab") || "designers";
  toggleNotionsFilter(activeTab);
  toggleCountryFilter(activeTab);
});

document.addEventListener("DOMContentLoaded", function () {
  const dropdown = document.querySelector(".dropdown");
  const dropdownToggle = document.querySelector(".dropdown-toggle");

  // Ouvrir/Fermer le menu
  dropdownToggle.addEventListener("click", function () {
    dropdown.classList.toggle("active");
  });

  // Fermer le menu si on clique en dehors
  document.addEventListener("click", function (event) {
    if (!dropdown.contains(event.target)) {
      dropdown.classList.remove("active");
    }
  });
});


</script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
  function initSelect2() {
    $('.select2').select2({
      placeholder: "Choisir des filtres",
      allowClear: true
    });
  }

  initSelect2(); // Initialisation au chargement

  document.addEventListener("turbo:load", function () {
    initSelect2(); // Ré-initialiser Select2 après chaque Turbo navigation
  });

 
});

</script>

<%= javascript_include_tag "controllers/reset", defer: true %>
<%= javascript_include_tag "controllers/autocompleteSearch", defer: true %>