<script>
  function initSelect2() {
    $(".select2").each(function () {
      const $select = $(this);

      // Toujours dÃ©truire mÃªme si le navigateur restaure la page
      if ($select.data('select2')) {
        $select.select2('destroy');
      }

      $select.select2({
        placeholder: "Choisir des filtres",
        allowClear: true,
        width: "100%"
      });

      const filterForm = document.getElementById("filterForm");
      if (filterForm) {
        $select.off("select2:select select2:unselect");
        $select.on("select2:select select2:unselect", function () {
          const formData = new FormData(filterForm);
          const url = new URL(window.location.href);

          formData.forEach((value, key) => {
            if (value) {
              url.searchParams.set(key, value);
            } else {
              url.searchParams.delete(key);
            }
          });

          window.history.pushState({}, "", url);
          filterForm.requestSubmit();
        });
      }
    });
  }

  // On utilise turbo:load pour la premiÃ¨re fois
  document.addEventListener("turbo:load", initSelect2);

  // Et turbo:before-cache pour dÃ©truire avant que Turbo ne mette la page en cache
  document.addEventListener("turbo:before-cache", () => {
    $(".select2").each(function () {
      const $select = $(this);
      if ($select.data('select2')) {
        $select.select2('destroy');
      }
    });
  });

</script>

