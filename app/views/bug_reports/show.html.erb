<style>
  .grid-1 {
    padding: 0 10vw;
    margin-top: 32px;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .top-profil {
    display: flex;
    align-items: center;
    height: 15vh;
    padding: 0 5vw;
    gap: 50px;
    background-color: #202020;
  }

  h1 {
    color: #FFF;
  }
</style>
<section class="top-profil">
  <%= link_to profil_path do %>
    <svg width="22" height="20" viewBox="0 0 22 20" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M21 10.2168L1.57848 10.2168M1.57848 10.2168L8.86155 18.4336M1.57848 10.2168L8.86155 2"
          stroke="white" stroke-width="2" stroke-linecap="square" />
    </svg>
  <% end %>
  <h1>Rapport de bug</h1>
</section>
<section class="grid-1">
  <p>
    <strong>Utilisateur:</strong>
    <%= @bug_report.user.email %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @bug_report.description %>
  </p>
  <p>
    <strong>URL:</strong>
    <%= link_to @bug_report.url, @bug_report.url %>
  </p>
  <p>
    <strong>Status:</strong>
    <%= @bug_report.status %>
  </p>
</section>
