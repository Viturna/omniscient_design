<% content_for :title, "Crée tes propres listes de références - Omniscient Design" %>
<% content_for :description, "Ici, tu peux retrouver les références de design qui t'ont marqué. Crée tes propres listes pour apprendre, t'inspirer ou encore personnaliser ton expérience. " %>
<style>
  h1{
    margin-top: 32px;
  }
  .top-header{
    padding: 78px 10vw;
    height: 120px;
    background-color: #202020;
    color:#FFF;
     position: relative;
    }
    .subtitle{
      width: 50vw;
    }
    .list-card{
    background-color:#FFF;
    padding: 25px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #202020;
    font-weight: 500;
    border-radius:5px;
    margin-top: 16px;
    position: relative;

  }
     .list-card:hover{
    background-color:#EDEDED;
    cursor: pointer;
  }
  .our-list{
    padding: 0 10vw;
    padding-bottom: 100px;
  }
  .flex-title-list{
    margin-top: 64px;
    display: flex;
    justify-content: space-between;
    align-items: center;


  }
    .our-list ul{
    margin-top: 48px;
  }
  .no-list{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 140px;
    gap: 32px;

  }
  .no-list p{
    text-align: center;
    width: 50%;
  }
  @media screen and (min-width:0px) and (max-width:500px) {
    h1{
      margin-top: 24px;
    }
    .button{
      width: fit-content;
    }
    .top-header{
      padding: 32px 5vw;
      height: fit-content;
    }
    .subtitle{
      width: 90vw;
    }
    .list-card{
      font-size: 15px;
      height: 30px;
      padding: 20px;
    }
     .list-card svg{
      scale: 0.8;
     }
    .our-list{
      padding: 0 5vw;
      padding-bottom: 50px;
    }
    .flex-title-list{
      margin-top: 48px;
      gap: 16px;
      flex-direction:column;
    }
    h2{
      font-size: 18px;
    }
  }
  @media screen and (min-width:501px) and (max-width:800px) {
    h1{
      margin-top: 24px;
    }
    .top-header{
      padding: 48px 5vw;
      height: 150px;
    }
    .subtitle{
      width: 90vw;
    }
    .list-card{
    height: 30px;
    }
    .our-list{
      padding: 0 5vw;
      padding-bottom: 50px;
    }
    .flex-title-list{
      margin-top: 48px;
    }

  }
</style>
<section class="top-header">
  <h1>Trier, modifier, créer vos listes</h1>
  <p class="subtitle">Créez des listes de références pour retrouver facilement vos sources et concentrez-vous sur ce qui compte vraiment.</p>
</section>
<section class="our-list">
  <div class="flex-title-list">
    <h2>Vos listes</h2>
    <%= link_to 'Créer votre liste', new_list_path, class:"button dark" %>
  </div>
  <% if @lists.any? %>
    <ul>
      <% @lists.each do |list| %>
        <li>
          <%= link_to list_path(list) do %>
            <div class="list-card">
              <%= list.name %>
              <svg width="22" height="21" viewBox="0 0 22 21" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 10.5L20.4215 10.5M20.4215 10.5L13.1384 2.2832M20.4215 10.5L13.1384 18.7168" stroke="#202020" stroke-width="2" stroke-linecap="square"/>
              </svg>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <%else%>
    <div class="no-list">
      <svg width="71" height="71" viewBox="0 0 71 71" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M35.5 33.875V50.125M35.5 20.9075L35.5325 20.8718M35.5 68C53.4497 68 68 53.4497 68 35.5C68 17.5503 53.4497 3 35.5 3C17.5503 3 3 17.5503 3 35.5C3 53.4497 17.5503 68 35.5 68Z" stroke="#52525D" stroke-width="4.875" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <p>Aucune liste trouvée pour le moment. Créez-en une pour commencer !</p>
    </div>
  <%end%>
</section>
