                    data-toggle-single-field-target="button"
                    data-action="click->toggle-single-field#reveal">
                + <%= t("add_oeuvre.steps.3.#{field}") %>
              </button>
              <div data-toggle-single-field-target="container" style="display: none;">
                <%= form.label field, t("add_oeuvre.steps.3.#{field}") %>
                <%= form.text_area field, 
