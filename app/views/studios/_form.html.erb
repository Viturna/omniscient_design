              <div data-toggle-single-field-target="container" style="display: none;">
                <%= form.label field, t("add_studio.steps.3.#{field}", default: field.to_s.humanize) %>
                <%= form.text_area field, 
                  placeholder: t("add_studio.steps.3.#{field}_placeholder", default: "Renseignez ce champ..."),
                  data: { toggle_single_field_target: "input" } %>
              </div>
            </div>
