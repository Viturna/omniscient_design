<style>
  .flex-card {
    margin-top: 24px;
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    justify-content: flex-start;
  }
  .title {
    margin-top: 32px;
    font-weight: 500;
    font-size: 24px;
  }
  .default-overlay {
    border-radius: 5px;
    width: 100%;
    height: 100%;
    position: absolute;
    background-color: rgba(0, 0, 0, 0.5);
  }
  .card-list {
    width: 13vw;
    height: 13vw;
    display: flex;
    align-items: end;
    border: 1px solid #E9E9E9;
    border-radius: 5px;
    position: relative;
    background-color: rgba(255, 255, 255, 0.8);
    box-sizing: border-box;
  }
  .card-title {
    position: relative;
    font-weight: 500;
    font-size: clamp(1.25rem, 0.85rem + 0.8vw, 1.75rem);
    width: 60%;
    color: #FFF;
    padding: 20px;
  }
  .card-checked {
    opacity: 0.6;
  }
  .hidden {
    display: none;
  }
  .hidden-check {
    visibility: hidden;
  }

  .search-container {
    position: relative;
    width: 30vw;
    height: 70px;
    margin-top: 30px;
  }
  .search-container input[type="search"] {
    width: 100%;
    height: 100%;
    padding-left: 50px;
    border: none;
    border-radius: 5px;
    font-weight: 500;
    font-size: 16px;
    color: #202020;
    background-color: #FFF;
  }
  .search-container input[type="search"]::placeholder {
    color: #202020;
  }
  .search-container .search-icon {
    position: absolute;
    top: 50%;
    left: 15px;
    transform: translateY(-50%);
    width: 18px;
    height: 18px;
  }
  .button-large {
    margin-top: 32px;
  }
  .form-footer {
    display: flex;
    justify-content: flex-end;
  }
</style>
