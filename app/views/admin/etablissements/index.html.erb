        <clipPath id="clip0_3256_104">
          <rect width="36" height="36" fill="white"/>
        </clipPath>
      </defs>
    </svg>
  <% end %>
  <h1>Gestion des Établissements</h1>
</section>
<section class="grid-1">
    <div class="search-bar-container" style="margin: 20px 0;">
    <%= form_with url: admin_etablissements_path, method: :get, local: true, class: "search-form", style: "display: flex; gap: 10px;" do |f| %>
      <%= f.text_field :query, 
            value: params[:query], 
            placeholder: "Rechercher par nom, UAI, ville, académie...", 
            class: "form-control" %>
      <%= f.submit "Rechercher", class: "btn btn-primary" %>
      <% if params[:query].present? %>
        <%= link_to "Effacer", admin_etablissements_path, class: "btn btn-secondary" %>
      <% end %>
    <% end %>
  </div>
  <%= paginate @etablissements %>

  <div class="table-wrapper">
    <table> 
      <thead>
        <tr>
          <th>Nom</th>
          <th>Nb. Utilisateurs</th> <%# NOUVELLE COLONNE %>
          <th>UAI</th>
          <th>Statut</th>
          <th>Type</th>
          <th>Académie / Région</th>
          <th>Localisation</th>
          <th>Contact</th>
          <th>Voies</th>
          <th>Sections</th>
          <th>Coordonnées</th>
          <th>Actions</th> <%# NOUVELLE COLONNE %>
        </tr>
      </thead>
      
      <tbody>
        <% @etablissements.each do |etab| %>
          <tr>
            <td>
              <strong><%= etab.name %></strong>
            </td>
            <td>
              <%# etab.users_count vient du contrôleur %>
              <strong><%= etab.users_count %></strong> 
            </td>
            <td><code><%= etab.uai %></code></td>
            <td><%= etab.statut_public_prive %></td>
            <td><%= etab.type_etablissement %></td>
            <td>
              <%= etab.academy %><br>
              <small><%= etab.region %></small>
            </td>
            <td>
              <%= etab.city %><br>
              <small><%= etab.address %></small>
            </td>
            <td class="col-links">
              <% if etab.phone.present? %>
                <%= etab.phone %><br>
              <% end %>
              <% if etab.messagerie.present? %>
                <%= mail_to etab.messagerie %><br>
              <% end %>
              <% if etab.website.present? %>
                <%= link_to "Site web", etab.website, target: "_blank", rel: "noopener" %>
              <% end %>
            </td>
            <td class="col-bool">
              Générale: <span class="bool-<%= etab.voie_generale %>"><%= oui_non(etab.voie_generale) %></span><br>
              Techno: <span class="bool-<%= etab.voie_technologique %>"><%= oui_non(etab.voie_technologique) %></span><br>
              Pro: <span class="bool-<%= etab.voie_professionnelle %>"><%= oui_non(etab.voie_professionnelle) %></span><br>
              Post-Bac: <span class="bool-<%= etab.post_bac %>"><%= oui_non(etab.post_bac) %></span>
            </td>
            <td class="col-bool">
              Arts: <span class="bool-<%= etab.section_arts %>"><%= oui_non(etab.section_arts) %></span><br>
              Cinéma: <span class="bool-<%= etab.section_cinema %>"><%= oui_non(etab.section_cinema) %></span><br>
              Théâtre: <span class="bool-<%= etab.section_theatre %>"><%= oui_non(etab.section_theatre) %></span>
            </td>
            <td>
              <% if etab.latitude.present? && etab.longitude.present? %>
                Lat: <%= etab.latitude %><br>
                Lon: <%= etab.longitude %>
              <% end %>
            </td>
            <td class="col-actions">
              <%= link_to "Modifier", edit_admin_etablissement_path(etab), class: "btn btn-sm btn-primary" %>
               <% if etab.users_count == 0 %>
                <%= link_to "Supprimer", admin_etablissement_path(etab), 
                      class: "btn btn-sm btn-danger",
                      data: { 
                        turbo_method: :delete, 
                        turbo_confirm: "Êtes-vous sûr de vouloir supprimer '#{etab.name}' ? Cette action est irréversible." 
                      } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div style="margin-top: 20px;">
      <%= paginate @etablissements %>
  </div>
</section>